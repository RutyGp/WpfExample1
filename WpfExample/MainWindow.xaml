<Window x:Class="WpfExample.MainWindow"  
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
       xmlns:local="clr-namespace:WpfExample"  
       mc:Ignorable="d"  
       Title="My First Wpf App" Height="300" Width="400">  

   <Grid Margin="10">  
       <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>  

       <StackPanel Orientation="Vertical" Grid.Row="0">  
           <TextBlock Text="Name:" Margin="0,5"/>  
           <TextBox Name="txtName" Width="200"/>  

           <TextBlock Text="Gender:" Margin="0,10,0,5"/>  
           <StackPanel Orientation="Horizontal">  
               <RadioButton Content="Male" GroupName="Gender"/>  
               <RadioButton Content="Female" GroupName="Gender" Margin="10,0,0,0"/>  
           </StackPanel>  

           <CheckBox Content="Subscribe to newsletter" Margin="0,10,0,0"/>  
       </StackPanel>  

       <WrapPanel Grid.Row="1" Margin="0,20,0,0">  
           <Button Content="Submit" Width="100" Margin="5"/>  
           <Button Content="Cancel" Width="100" Margin="5"/>  
       </WrapPanel>  

       <ProgressBar Grid.Row="2" Height="20" Minimum="0" Maximum="100" Value="40"/>
        <Button Grid.Row="3"  Content="Events Example" Click="EventsExample" Height="40" />
        <Button Grid.Row="4" Background="Transparent">
            <Image Source="/Images/star.png" />

        </Button>
        </Grid>  
</Window>




